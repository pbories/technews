{% extends 'layout.html.twig' %}

{% set active = categorie.slug %}

{% block page_title %}
    {{ categorie.nom | title }}
{% endblock %}

{% block content %}
    <div class="row">
        <!--colleft-->
        <div class="col-md-8 col-sm-12">
            {%  if articles is not empty %}

                <div class="box-caption">
                    <span>{{ categorie.nom | title }}</span>
                </div>
                <!--list-news-cate-->
                <div class="list-news-cate">
                    {% for article in articles  %}

                        <article class="news-cate-item">
                            <div class="row">
                                <div class="col-md-5 col-sm-5 col-xs-12">
                                    <a href="{{ path('index_article', {
                                        'categorie': article.categorie.slug,
                                        'slug': article.slug,
                                        'id': article.id
                                    }) }}">
                                        <img alt="{{ article.titre }}" src="{{ asset('images/product/')~article.featuredimage }}">
                                    </a>
                                </div>
                                <div class="col-md-7 col-sm-7 col-xs-12">
                                    <h3><a href="{{ path('index_article', {
                                            'categorie': article.categorie.slug,
                                            'slug': article.slug,
                                            'id': article.id
                                        }) }}">{{ article.titre }}</a></h3>
                                    <div class="meta-post">
                                        <a href="{{ path('index_membre', {
                                            'prenom': article.membre.prenom,
                                            'nom': article.membre.nom
                                        }) }}">
                                            {{ article.membre.prenom~' '~article.membre.nom }}
                                        </a>
                                        <em></em>
                                        <span>
                                            {{ article.datecreation | date('d/m/Y') }}
                                        </span>
                                    </div>
                                    {{ article.contenu | summary }} <a href="{{ path('index_article', {
                                        'categorie': article.categorie.slug,
                                        'slug': article.slug,
                                        'id': article.id
                                    }) }}">Lire la suite</a>
                                </div>
                            </div>
                        </article>
                {% endfor %}

                </div>
            {%  else %}
                <div class="alert alert-danger">
                    <strong>Aucune publication dans cette cat√©gorie pour le moment.</strong>
                </div>
            {% endif %}
            {# <div class="paging">
                <a href="#">Prev</a>
                <a href="#" class="current">1</a>
                <a href="#">2</a>
                <a href="#">3</a>
                <a href="#">4</a>
                <a href="#">5</a>
                <a href="#">Next</a>
            </div>#}

        </div>
        {#{% include 'components/_sidebar.html.twig' %}#}
        {{ render(controller('App\\Controller\\TechNews\\FrontController::sidebar')) }}

    </div>
{% endblock %}

